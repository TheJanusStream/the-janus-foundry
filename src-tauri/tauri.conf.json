{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "The Janus Foundry",
  "version": "1.0.0",
  "identifier": "stream.janus.the.the-janus-foundry",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "The Janus Foundry",
        "width": 1200,
        "height": 600
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-window-permissions",
          "description": "Main window capabilities",
          "windows": [
            "main"
          ],
          "permissions": [
            "clipboard-manager:allow-read-text",
            {
              "identifier": "opener:allow-open-url",
              "open": true,
              "allow": [
                {
                  "url": "https://www.patreon.com/TheJanusStream"
                }
              ]
            }
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
